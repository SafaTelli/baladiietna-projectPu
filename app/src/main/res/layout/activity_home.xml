<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:id="@+id/rec"
            app:cardCornerRadius="15dp"
            android:elevation="10dp"
            android:layout_height="100dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="50dp"
                    android:src="@drawable/problem"
                    android:layout_alignParentLeft="true"
                    android:layout_height="50dp">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="تشكيات"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textSize="27dp"

                    android:layout_height="wrap_content">

                </TextView>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            app:cardCornerRadius="15dp"
            android:elevation="10dp"
            android:id="@+id/demande"
            android:layout_height="100dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:src="@drawable/magazine"
                    android:layout_alignParentLeft="true"
                    android:layout_height="50dp">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="مطالب نفاذ الى المعلومة"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textSize="27dp"
                    android:layout_height="wrap_content">

                </TextView>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            app:cardCornerRadius="15dp"
            android:id="@+id/com"
            android:elevation="10dp"
            android:layout_height="100dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="50dp"
                    android:src="@drawable/meeting"
                    android:layout_alignParentLeft="true"
                    android:layout_height="50dp">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="المجلس البلدي"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textSize="27dp"
                    android:layout_height="wrap_content">

                </TextView>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:id="@+id/calend"
            app:cardCornerRadius="15dp"
            android:elevation="10dp"
            android:layout_height="100dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:src="@drawable/calendar"
                    android:layout_alignParentLeft="true"
                    android:layout_height="50dp">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="رزنامة المواعيد"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textSize="27dp"

                    android:layout_height="wrap_content">

                </TextView>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>




    </LinearLayout>



</RelativeLayout>