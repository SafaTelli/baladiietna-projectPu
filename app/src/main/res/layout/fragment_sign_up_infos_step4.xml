<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
   >

    <!-- TODO: Update blank fragment layout -->




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:padding="30dp">



            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="كلمة السر"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/editText_password1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittextbg_white"
                android:inputType="textPassword"
                android:paddingRight="10dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تأكيد كلمة السر"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/editText_password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittextbg_white"
                android:inputType="textPassword"
                android:paddingRight="10dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="رقم الهاتف"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/editText_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittextbg_white"
                android:inputType="number"
                android:paddingRight="10dp"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_consent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="أوافق على شروط الإستخدام"
                    android:textColor="@android:color/black"/>
                <CheckBox
                    android:id="@+id/check_consent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />


        </LinearLayout>


    </ScrollView>


</RelativeLayout>